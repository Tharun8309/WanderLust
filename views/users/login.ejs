<% layout('/layouts/boilerplate')%>
<body>
    <div class="row"> 
    <div class="col-6 offset-3">
    <h2 style="text-align: center;">Log in to Wander Lust</h2>
    <form action="/login" method="post"  novalidate>
        <div class="form-group ">
          <label for="username" class="form-label">Enter your username</label>
          <input type="text" id="username" name="username" class="form-control border-dark mb-2" required />
           </div>
    
         
          <div class="form-group">
            <label for="password class="form-label">Enter your password</label>
            <input type="password" id="password" name="password" class="form-control border-dark mb-2" required/>
          </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
       </div>
        </div>
</body>