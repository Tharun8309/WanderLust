<% layout('/layouts/boilerplate')%>
<body>
    <div class="row"> 
    <div class="col-6 offset-3">
    <h2 style="text-align: center;">Sign up here</h2>
    <form action="/signup" method="post"  class="needs-validation" novalidate>
        <div class="form-group ">
          <label for="username" class="form-label">Username</label>
          <input type="text" id="username" name="username" class="form-control border-dark mb-2" required />
          <div class="valid-feedback">
            Username Looks good!
          </div>
          <div class="invalid-feedback">
            Please choose a valid username
          </div>
        </div>
    
           <div class="form-group">
            <label for="email" class="form-label">E-mail</label>
            <input type="text" id="email" name="email" class="form-control border-dark mb-2" required />
            
            <div class="invalid-feedback">
              Please provide a valid email
            </div>
          </div>
          <div class="form-group">
            <label for="password class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control border-dark mb-2" required/>
          </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
       </div>
        </div>
</body>