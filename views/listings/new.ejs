<% layout('/layouts/boilerplate')%>
    <div class="container mt-5">
        <div class="row"> 
            <div class="col-8 offset-2">
                <h3>Create a New Listing</h3>
                <form action="/listings/create" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                    
                    <div class="form-group mb-3">
                        <label for="title" class="form-label">Enter the title</label>
                        <input type="text" id="title" name="title" class="form-control border-dark" placeholder="e.g., Cozy Apartment in Paris" required />
                        <div class="valid-feedback">Title looks good!</div>
                        <div class="invalid-feedback">Please provide a valid title.</div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="description" class="form-label">Write the Description</label>
                        <textarea id="description" name="description" class="form-control border-dark" rows="4" placeholder="Describe your listing..." required></textarea>
                        <div class="valid-feedback">Description looks good!</div>
                        <div class="invalid-feedback">Please write a description.</div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="category" class="form-label">Select Category</label>
                        <select id="category" name="category" class="form-control border-dark" required>
                            <option value="" disabled selected>Select a category</option>
                            <option value="trending">Trending</option>
                            <option value="rooms">Rooms</option>
                            <option value="iconiccities">Iconic Cities</option>
                            <option value="castles">Castles</option>
                            <option value="amazingpools">Amazing Pools</option>
                            <option value="camping">Camping</option>
                            <option value="mountains">Mountains</option>
                            <option value="arctic">Arctic</option>
                            <option value="farms">Farms</option>
                            <option value="beach">Beach</option>
                            <option value="trophical">Trophical</option>
                            <option value="domes">Domes</option>
                            <option value="boat">Boats</option> 

                        </select>
                        <div class="invalid-feedback">Please select a category.</div>
                    </div>
                    
                    <div class="row">
                        <div class="form-group col-4 mb-3">
                            <label for="cost" class="form-label">Enter the cost per night</label>
                            <input type="number" id="cost" name="cost" class="form-control border-dark" required />
                            <div class="invalid-feedback">Please provide a valid cost.</div>
                        </div>
                        <div class="form-group col-8 mb-3">
                            <label for="country" class="form-label">Enter the country</label>
                            <input type="text" id="country" name="country" class="form-control border-dark" placeholder="e.g., France" required />
                            <div class="invalid-feedback">Please enter a valid country.</div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="location" class="form-label">Enter the location</label>
                        <input type="text" id="location" name="location" class="form-control border-dark" placeholder="e.g., Paris" required />
                        <div class="invalid-feedback">Please provide a valid location.</div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="image" class="form-label">Upload images</label>
                        <input type="file" id="image" name="image" class="form-control border-dark" multiple accept="image/*" />
                        <div class="invalid-feedback">Please select one or more images.</div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>